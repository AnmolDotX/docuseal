# Environment Variables — DocuSeal
# Copy this to .env.local and fill in your values

# ─── App ──────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=DocuSeal

# ─── Database (Supabase PostgreSQL) ───────────────
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres"

# ─── NextAuth ─────────────────────────────────────
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-at-least-32-chars-long

# ─── Google OAuth ─────────────────────────────────
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ─── OpenAI ───────────────────────────────────────
OPENAI_API_KEY=sk-...

# Razorpay (UPI + International Cards — works in India — test mode is free)
RAZORPAY_KEY_ID="rzp_test_your-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"
RAZORPAY_WEBHOOK_SECRET="your-webhook-secret"

# Razorpay Plan IDs (create in Dashboard → Subscriptions → Plans)
RAZORPAY_STARTER_MONTHLY_PLAN_ID="plan_starter_monthly"
RAZORPAY_STARTER_YEARLY_PLAN_ID="plan_starter_yearly"
RAZORPAY_PRO_MONTHLY_PLAN_ID="plan_pro_monthly"
RAZORPAY_PRO_YEARLY_PLAN_ID="plan_pro_yearly"
RAZORPAY_BUSINESS_MONTHLY_PLAN_ID="plan_business_monthly"
RAZORPAY_BUSINESS_YEARLY_PLAN_ID="plan_business_yearly"

# ─── Resend (Email) ───────────────────────────────
RESEND_API_KEY=re_...
FROM_EMAIL=noreply@docuseal.ai

# ─── Supabase Storage ─────────────────────────────
NEXT_PUBLIC_SUPABASE_URL=https://[PROJECT].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...
